<h2>プロフィール設定</h2>

<%= form_with(model: @user, url: user_registration_path, method: :put, local: true) do |f| %>
  

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>

  <div class="field">  
    <%= f.label :email %>
    <%= f.email_field :email %>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age, in: 1..100 %>
  
  <div class="field">
    <%= f.label :gender %>
    <%= f.select :gender, User.genders.keys, {} %>

  <div class="field">
    <%= f.label :address %>
    <%= f.select :address, User.addresses.keys, {} %>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image  %>

  <div class="field">
    <%= f.label :job %>
    <%= f.text_field :job %>

  <div class="field">
    <%= f.label :self_introduction %>
    <%= f.text_area :self_introduction %>

    <div class="actions">
    <%= f.submit "更新" %>
    </div>
<% end %>

<%= link_to "戻る", :back %>

